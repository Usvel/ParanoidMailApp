<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/navigation"
    app:startDestination="@id/vpn_fragment">

    <fragment
        android:id="@+id/profile_fragment"
        android:name="com.paranoid.vpn.app.profile.ui.profile.ProfileFragment"
        tools:layout="@layout/navigation_profile_fragment">
        <action
            android:id="@+id/action_profile_fragment_to_registration_fragment"
            app:destination="@id/registration_fragment" />
        <action
            android:id="@+id/action_profile_fragment_to_login_fragment"
            app:destination="@id/login_fragment" />
        <action
            android:id="@+id/action_profile_fragment_to_edit_user_fragment"
            app:destination="@id/edit_user_fragment" />
    </fragment>

    <fragment
        android:id="@+id/settings_fragment"
        android:name="com.paranoid.vpn.app.settings.ui.main.SettingsFragment"
        tools:layout="@layout/navigation_settings_fragment" >
        <action
            android:id="@+id/action_settings_fragment_to_vpn_config_add_element"
            app:destination="@id/vpn_config_add_element" />
        <action
            android:id="@+id/action_settings_fragment_to_qr_scanner"
            app:destination="@id/qr_scanner"/>
    </fragment>

    <fragment
        android:id="@+id/vpn_config_add_element"
        android:name="com.paranoid.vpn.app.settings.ui.vpn_config.VPNConfigAddFragment"
        tools:layout="@layout/navigation_vpn_config_add_fragment" >
        <action
            android:id="@+id/action_vpn_config_add_element_to_settings_fragment"
            app:destination="@id/settings_fragment"
            app:popUpTo="@+id/settings_fragment"
            app:popUpToInclusive="true" />
    </fragment>

    <fragment
        android:id="@+id/vpn_fragment"
        android:name="com.paranoid.vpn.app.vpn.ui.VPNFragment"
        tools:layout="@layout/navigation_vpn_fragment" >
        <action
            android:id="@+id/action_vpn_fragment_to_settings_fragment"
            app:popUpTo="@id/settings_fragment"
            app:popUpToInclusive="true"
            app:destination="@id/settings_fragment" />
        <action
            android:id="@+id/action_vpn_fragment_to_profile_fragment"
            app:popUpTo="@id/profile_fragment"
            app:popUpToInclusive="true"
            app:destination="@id/profile_fragment" />
    </fragment>

    <fragment
        android:id="@+id/registration_fragment"
        android:name="com.paranoid.vpn.app.profile.ui.registration.RegistrationFragment"
        tools:layout="@layout/navigation_authentication_fragment">
        <action
            android:id="@+id/action_registration_fragment_to_profile_fragment"
            app:destination="@id/profile_fragment"
            app:popUpTo="@+id/profile_fragment"
            app:popUpToInclusive="true" />
    </fragment>

    <fragment
        android:id="@+id/login_fragment"
        android:name="com.paranoid.vpn.app.profile.ui.login.LoginFragment"
        tools:layout="@layout/navigation_authentication_fragment">
        <action
            android:id="@+id/action_login_fragment_to_profile_fragment"
            app:destination="@id/profile_fragment"
            app:popUpTo="@+id/profile_fragment"
            app:popUpToInclusive="true" />
    </fragment>

    <fragment
        android:id="@+id/edit_user_fragment"
        android:name="com.paranoid.vpn.app.profile.ui.edit.EditUserFragment"
        tools:layout="@layout/navigation_edit_user_fragment">

        <action
            android:id="@+id/action_edit_user_fragment_to_profile_fragment"
            app:destination="@id/profile_fragment"
            app:popUpTo="@+id/profile_fragment"
            app:popUpToInclusive="true"/>
    </fragment>

    <fragment
        android:id="@+id/qr_creator"
        android:name="com.paranoid.vpn.app.qr.QRCreator"
        tools:layout="@layout/qr_creator">
    </fragment>

    <fragment
        android:id="@+id/qr_scanner"
        android:name="com.paranoid.vpn.app.qr.QRScanner"
        tools:layout="@layout/qr_scanner">
        <action
            android:id="@+id/action_qr_scanner_to_settings"
            app:destination="@id/settings_fragment"
            app:popUpTo="@+id/settings_fragment"
            app:popUpToInclusive="true"/>
    </fragment>
</navigation>