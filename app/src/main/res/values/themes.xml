<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Paranoid" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primaryDark</item>
        <item name="colorPrimaryDark">@color/primaryLight</item>
        <item name="colorOnPrimary">@color/primaryLight</item>
        <!-- Window Style -->
        <item name="android:windowNoTitle">true</item>
        <!-- Secondary brand color. -->
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/status_bar_color</item>
        <item name="android:navigationBarColor">@color/nav_bar_color</item>
        <!-- Customize your theme here. -->
        <item name="android:windowLightStatusBar" tools:targetApi="23">true</item>
        <item name="android:windowLightNavigationBar" tools:targetApi="27">true</item>
        <item name="toolBarColor">@color/black</item>
        <item name="backgroundVioletLight">@color/minor_color_light</item>
        <item name="backgroundViolet">@color/minor_color</item>
        <!-- Nav bar -->
        <item name="navBarIconIndicator">@color/nav_indicator_light</item>
        <item name="navBarIconColor">@color/dark_nav_icon_selected</item>
        <item name="navBarIconColorNotChecked">@color/dark_nav_icon_not_selected</item>
        <item name="toolBarColorSecond">@color/second_background_transparent</item>
        <!-- Text -->
        <item name="textDedicated">@color/black</item>
        <item name="textTransparent">@color/dark_text_transparent</item>
        <!-- VPN Button -->
        <item name="vpnButtonDisabled">@color/vpn_color_disabled</item>
        <item name="vpnButtonConnected">@color/vpn_color_connected</item>
        <item name="vpnButtonError">@color/vpn_color_error</item>
        <!-- CardViewButton -->
        <item name="cardViewBackground">@color/card_view_background_light</item>
        <!-- ProfileFragment -->
        <item name="textButtonProfile">@color/text_button_profile_light</item>
        <item name="cardViewText">@color/text_card_view_light</item>
        <!-- AuthenticationFragment -->
        <item name="boxStrokeColor">@color/black</item>
        <!-- Item color -->
        <item name="iconBackground">@color/icon_background_light</item>
        <!-- Item color -->
        <item name="iconBackgroundRed">@color/icon_background_red_light</item>
    </style>

    <style name="Widget.Material3.BottomNavigationView.ActiveIndicator.Paranoid" parent="Widget.Material3.BottomNavigationView.ActiveIndicator">
        <item name="android:width">@dimen/m3_bottom_nav_item_active_indicator_width</item>
        <item name="android:height">@dimen/m3_bottom_nav_item_active_indicator_height</item>
        <item name="marginHorizontal">@dimen/m3_bottom_nav_item_active_indicator_margin_horizontal
        </item>
        <item name="shapeAppearance">
            @style/ShapeAppearance.Material3.NavigationBarView.ActiveIndicator
        </item>
        <item name="android:color">?attr/navBarIconIndicator</item>
    </style>

    <!--DefaultAlertDialogTheme-->
    <style name="AlertDialogTheme" parent="Base.Theme.AppCompat.Light.Dialog">
        <item name="android:textColorPrimary">@color/black</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:windowTitleStyle">@style/AlertDialogThemeTitle</item>
        <item name="android:textAppearance">@style/AlertMessageTextAppearance</item>
        <item name="buttonBarNegativeButtonStyle">@style/NegativeButtonDialogStyle</item>
        <item name="buttonBarPositiveButtonStyle">@style/PositiveButtonDialogStyle</item>
        <item name="buttonBarNeutralButtonStyle">@style/NeutralButtonDialogStyle</item>
        <item name="colorControlHighlight">@color/black</item>
    </style>

    <style name="AlertDialogThemeTitle">
        <item name="android:textAppearance">@style/AlertTitleTextAppearance</item>
    </style>

    <style name="AlertTitleTextAppearance">
        <item name="android:textSize">20sp</item>
    </style>

    <style name="AlertMessageTextAppearance">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="NegativeButtonDialogStyle" parent="Widget.AppCompat.Button.ButtonBar.AlertDialog">
        <item name="android:textColor">@color/primaryLight</item>
    </style>

    <style name="PositiveButtonDialogStyle" parent="Widget.AppCompat.Button.ButtonBar.AlertDialog">
        <item name="android:textColor">@color/primaryLight</item>
    </style>

    <style name="NeutralButtonDialogStyle" parent="Widget.AppCompat.Button.ButtonBar.AlertDialog">
        <item name="android:textColor">@color/primaryLight</item>
    </style>
    <!--DefaultAlertDialogTheme-->

    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="bottomSheetDialogTheme">@style/AppBottomSheetDialogTheme</item>
    </style>

    <style name="AppBottomSheetDialogTheme"
        parent="Theme.Design.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/AppModalStyle</item>
    </style>

    <style name="AppModalStyle"
        parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@drawable/rounded_dialog</item>
    </style>

    <!-- Alert Dialog -->
    <style name="ThemeOverlay.MaterialComponents.MaterialAlertDialog_Background"
        parent="@style/ThemeOverlay.MaterialComponents.MaterialAlertDialog">
        <!-- Background Color-->
        <item name="android:background">@color/minor_color_light</item>
        <!-- Style for negative button -->
        <item name="buttonBarNegativeButtonStyle">@style/NegativeButtonStyle</item>
    </style>

    <style name="NegativeButtonStyle" parent="@style/Widget.MaterialComponents.Button.TextButton">
        <!-- text color for the button -->
        <item name="android:textColor">@color/nav_indicator_dark</item>
    </style>

    <style name="TranslucentStatusBar" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowTranslucentStatus">true</item>
    </style>

</resources>