<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Paranoid" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/primaryLight</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/status_bar_color</item>
        <item name="android:navigationBarColor">@color/nav_bar_color</item>
        <!-- Customize your theme here. -->
        <item name="android:windowLightStatusBar" tools:targetApi="23">true</item>
        <item name="android:windowLightNavigationBar" tools:targetApi="27">true</item>
        <item name="toolBarColor">@color/black</item>
        <item name="backgroundVioletLight">@color/minorColorLight</item>
        <item name="backgroundViolet">@color/minorColor</item>
        <!-- Nav bar -->
        <item name="navBarIconColor">@color/darkNavIconSelected</item>
        <item name="navBarIconColorNotChecked">@color/darkNavIconNotSelected</item>
        <item name="toolBarColorSecond">@color/secondBackgroundTransparent</item>
        <!-- Text -->
        <item name="textTransparent">@color/darkTextTransparent</item>
        <!-- VPN Button -->
        <item name="vpnButtonDisabled">@color/vpnColorDisabled</item>
        <item name="vpnButtonConnected">@color/vpnColorConnected</item>
        <item name="vpnButtonError">@color/vpnColorError</item>
    </style>
</resources>