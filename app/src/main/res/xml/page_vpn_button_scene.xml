<?xml version="1.0" encoding="utf-8"?>
<MotionScene xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:motion="http://schemas.android.com/apk/res-auto"
    xmlns:lol="http://schemas.android.com/tools"
    xmlns:app="urn:oasis:names:tc:xliff:document:1.2">

    <Transition
        motion:constraintSetEnd="@+id/end"
        motion:constraintSetStart="@id/start"
        lol:constraintSetEnd="@+id/end"
        lol:constraintSetStart="@id/start"
        motion:autoTransition="animateToEnd"
        motion:duration="500">
       <KeyFrameSet>
       </KeyFrameSet>
    </Transition>

    <ConstraintSet android:id="@+id/start">
        <Constraint
            motion:layout_constraintEnd_toEndOf="parent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            motion:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginEnd="@dimen/base_padding"
            android:layout_marginStart="@dimen/base_padding"
            motion:layout_constraintStart_toStartOf="parent"
            android:id="@+id/cvMainConfigurationCard"
            motion:layout_constraintTop_toBottomOf="@+id/tvIsConnected"
            android:layout_marginBottom="-100dp"
            android:layout_marginTop="150dp" />
        <Constraint
            android:layout_height="wrap_content"
            motion:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="@dimen/base_padding"
            motion:layout_constraintEnd_toEndOf="parent"
            android:layout_width="wrap_content"
            motion:layout_constraintTop_toBottomOf="@+id/cvVpnButtonBackground"
            android:id="@+id/tvIsConnected" />
        <Constraint
            motion:layout_constraintEnd_toEndOf="parent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            motion:layout_constraintBottom_toTopOf="@+id/cvMainConfigurationCard"
            motion:layout_constraintVertical_bias="1.0"
            motion:layout_constraintTop_toBottomOf="@+id/cvVpnButtonBackground"
            motion:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="@dimen/base_padding"
            android:id="@+id/tvIsConnected" />
        <Constraint
            android:id="@+id/llConnectionStatus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            motion:visibilityMode="ignore">
            <PropertySet lol:visibilityMode="ignore" />
        </Constraint>
    </ConstraintSet>

    <ConstraintSet android:id="@+id/end">
        <Constraint android:id="@+id/llConnectionStatus">
            <PropertySet lol:visibilityMode="ignore" />
        </Constraint>
    </ConstraintSet>
</MotionScene>