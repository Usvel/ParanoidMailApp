<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools">

    <TextView
        android:id="@+id/tvNetworkHeader"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/real_medium_padding"
        android:paddingStart="@dimen/real_medium_padding"
        android:paddingEnd="@dimen/real_medium_padding"
        android:text="@string/network_data"
        android:textSize="@dimen/proxy_header_title_size"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/ivFilterProxies"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_outline_filter_alt_24"
        android:paddingTop="@dimen/real_medium_padding"
        android:paddingStart="@dimen/real_medium_padding"
        android:paddingEnd="@dimen/real_medium_padding"
        android:contentDescription="@string/filter_proxies"
        app:layout_constraintBottom_toBottomOf="@+id/tvNetworkHeader"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/tvNetworkHeader" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingTop="@dimen/settings_fragment_small_padding"
        android:paddingStart="@dimen/settings_fragment_small_padding"
        android:paddingEnd="@dimen/settings_fragment_small_padding"
        android:paddingBottom="@dimen/max_padding"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvNetworkHeader"
        app:layout_constraintVertical_bias="0.0">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rvAllProxy"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scrollbars="vertical"
            tools:listitem="@android:layout/two_line_list_item" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>