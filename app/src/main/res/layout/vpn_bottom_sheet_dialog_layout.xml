<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/imBottomSheetGrapple"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/base_padding"
        android:contentDescription="@string/bottom_handler"
        android:src="@drawable/ic_bottom_sheet_grapple"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvChooseConfig"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imBottomSheetGrapple"
        android:layout_marginTop="0dp"
        android:textColor="@color/text_view_black"
        android:gravity="center"
        android:padding="@dimen/settings_fragment_small_padding"
        android:text="@string/choose_configuration">

    </TextView>

    <HorizontalScrollView
        android:id="@+id/cvHorizontalLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvChooseConfig"
        android:fillViewport="true"
        android:measureAllChildren="false"
        android:padding="@dimen/settings_fragment_small_padding"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rvAllConfigs"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scrollbars="vertical"
                tools:listitem="@android:layout/two_line_list_item" />
        </LinearLayout>
    </HorizontalScrollView>

    <!-- TEST ONLY -->
    <!-- COMING IN MVP 2 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/cvHorizontalLayout"
        android:orientation="horizontal">

        <androidx.cardview.widget.CardView
            android:layout_width="0dp"
            android:layout_height="64dp"
            android:layout_marginStart="@dimen/base_padding"
            android:layout_marginTop="@dimen/base_padding"
            android:layout_marginEnd="@dimen/base_padding"
            android:layout_marginBottom="@dimen/base_padding"
            android:layout_weight="1"
            android:backgroundTint="?attr/backgroundVioletLight"
            app:cardCornerRadius="32dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:textColor="@color/text_view_black"
                android:text="@string/search_coming_soon">
            </TextView>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:layout_marginStart="@dimen/base_padding"
            android:layout_marginTop="@dimen/base_padding"
            android:layout_marginEnd="@dimen/base_padding"
            android:layout_marginBottom="@dimen/base_padding"
            android:backgroundTint="?attr/backgroundVioletLight"
            android:shape="ring"
            app:cardCornerRadius="32dp">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical|center_horizontal"
                android:contentDescription="@string/favorite"
                app:tint="?attr/navBarIconColor"
                android:alpha="0.7"
                android:foregroundGravity="center_vertical"
                android:src="@drawable/ic_baseline_favorite" />
        </androidx.cardview.widget.CardView>
    </LinearLayout>

</RelativeLayout>