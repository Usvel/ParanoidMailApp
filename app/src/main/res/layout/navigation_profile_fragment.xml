<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.motion.widget.MotionLayout
    android:id="@+id/mlSettingsMotionLayout"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layoutDescription="@xml/navigation_profile_fragment_scene"
    tools:context=".profile.ui.profile.ProfileFragment">

    <TextView
        android:id="@+id/tvProfileHello"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/profile_fragment_content_margin_horizontal"
        android:layout_marginTop="@dimen/profile_fragment_content_margin_top"
        android:text="@string/profile_fragment_hi"
        android:fontFamily="@font/readex_regular"
        android:textColor="@color/text_view_dark_text_transparent"
        android:textSize="@dimen/profile_fragment_hello_size"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvProfileName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/text_view_black"
        android:fontFamily="@font/readex_regular"
        android:textSize="@dimen/profile_fragment_name_size"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@id/tvProfileHello"
        app:layout_constraintTop_toBottomOf="@id/tvProfileHello"
        tools:text="UserName" />

    <androidx.cardview.widget.CardView
        android:id="@+id/viewChangeProfile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/profile_fragment_icon_margin_top"
        android:visibility="gone"
        android:backgroundTint="?attr/iconBackground"
        android:innerRadius="0dp"
        android:shape="ring"
        app:cardCornerRadius="@dimen/small_corner_radius"
        app:cardElevation="0dp"
        app:layout_constraintStart_toStartOf="@id/tvProfileName"
        app:layout_constraintTop_toBottomOf="@id/tvProfileName">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:contentDescription="@string/profile_fragment_about_change"
            android:foregroundGravity="center_vertical"
            android:padding="@dimen/icon_inner_padding"
            android:src="@drawable/ic_change"
            app:tint="?attr/toolBarColor" />
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/cvProfileBasket"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/profile_fragment_icon_margin_start"
        android:layout_marginTop="@dimen/profile_fragment_icon_margin_top"
        android:visibility="gone"
        android:backgroundTint="?attr/iconBackgroundRed"
        android:innerRadius="0dp"
        android:shape="ring"
        app:cardCornerRadius="@dimen/small_corner_radius"
        app:cardElevation="0dp"
        app:layout_constraintStart_toEndOf="@id/viewChangeProfile"
        app:layout_constraintTop_toBottomOf="@id/tvProfileName">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:contentDescription="@string/profile_fragment_about_delete"
            android:foregroundGravity="center_vertical"
            android:padding="@dimen/icon_inner_padding"
            android:src="@drawable/ic_delete"
            app:tint="?attr/toolBarColor" />
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/cvProfileOut"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/profile_fragment_icon_margin_start"
        android:layout_marginTop="@dimen/profile_fragment_icon_margin_top"
        android:backgroundTint="?attr/iconBackground"
        android:innerRadius="0dp"
        android:shape="ring"
        app:cardCornerRadius="@dimen/small_corner_radius"
        app:cardElevation="0dp"
        app:layout_constraintStart_toEndOf="@id/cvProfileBasket"
        app:layout_constraintTop_toBottomOf="@id/tvProfileName">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:contentDescription="@string/profile_fragment_about_delete"
            android:foregroundGravity="center_vertical"
            android:padding="@dimen/icon_inner_padding"
            android:src="@drawable/ic_logout"
            app:tint="?attr/toolBarColor" />
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/cvProfileImage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/profile_fragment_content_margin_top"
        android:layout_marginEnd="@dimen/profile_fragment_content_margin_horizontal"
        android:backgroundTint="?attr/iconBackground"
        android:innerRadius="0dp"
        android:shape="ring"
        app:cardCornerRadius="@dimen/big_corner_radius"
        app:cardElevation="0dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/ivProfileImage"
            android:layout_width="@dimen/profile_fragment_image_size"
            android:layout_height="@dimen/profile_fragment_image_size"
            android:layout_gravity="center_vertical"
            android:contentDescription="@string/profile_fragment_about_image"
            android:foregroundGravity="center_vertical"
            android:padding="@dimen/profile_fragment_image_padding"
            android:src="@drawable/ic_image_profile" />
    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/tvProfileStatistics"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/base_padding"
        android:text="@string/profile_fragment_statistics"
        android:textColor="@color/text_view_dark_text_transparent"
        android:textSize="@dimen/profile_fragment_title_size"
        app:layout_constraintStart_toStartOf="@id/tvProfileEmailProfile"
        app:layout_constraintTop_toBottomOf="@id/tvProfileEmailProfile"
        app:layout_constraintVertical_chainStyle="packed" />

    <androidx.cardview.widget.CardView
        android:id="@+id/cvGraph"
        android:visibility="gone"
        android:layout_width="@dimen/card_size"
        android:layout_height="@dimen/card_size"
        android:layout_marginStart="@dimen/real_medium_padding"
        android:layout_marginTop="@dimen/base_padding"
        app:cardCornerRadius="@dimen/minimum_corner_radius"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvProfileStatistics">

        <com.github.mikephil.charting.charts.BarChart
            android:id="@+id/bcGraph"
            android:layout_width="@dimen/chart_size"
            android:layout_height="@dimen/chart_size"
            android:layout_gravity="center" />

    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/tvProfileEmail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/profile_fragment_email_margin_top"
        android:text="@string/profile_fragment_email"
        android:textColor="@color/text_view_dark_text_transparent"
        android:textSize="@dimen/profile_fragment_title_size"
        android:fontFamily="@font/readex_regular"
        android:visibility="gone"
        app:layout_constraintStart_toStartOf="@id/viewChangeProfile"
        app:layout_constraintTop_toBottomOf="@id/viewChangeProfile" />

    <TextView
        android:id="@+id/tvProfileEmailProfile"
        android:layout_width="wrap_content"
        android:visibility="gone"
        android:layout_height="wrap_content"
        android:fontFamily="@font/readex_regular"
        android:textColor="@color/text_view_black"
        android:textSize="@dimen/profile_fragment_email_size"
        app:layout_constraintStart_toStartOf="@id/tvProfileEmail"
        app:layout_constraintTop_toBottomOf="@id/tvProfileEmail"
        tools:text="sample.mail@gmail.com" />

    <androidx.cardview.widget.CardView
        android:id="@+id/cvProfileLogin"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/profile_fragment_card_view_bottom_margin"
        android:clickable="true"
        android:foreground="?android:attr/selectableItemBackground"
        app:cardBackgroundColor="?attr/cardViewBackground"
        app:cardCornerRadius="@dimen/profile_fragment_card_view_radius"
        app:cardElevation="0dp"
        app:layout_constraintBottom_toTopOf="@id/cvProfileRegistration"
        app:layout_constraintEnd_toEndOf="@id/cvProfileImage"
        app:layout_constraintStart_toStartOf="@id/tvProfileName"
        app:layout_constraintTop_toBottomOf="@id/tvProfileEmailProfile"
        app:layout_constraintVertical_chainStyle="packed">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center|start"
            android:layout_marginStart="@dimen/profile_fragment_card_view_icon_margin"
            android:layout_marginTop="@dimen/profile_fragment_card_view_icon_margin"
            android:layout_marginBottom="@dimen/profile_fragment_card_view_icon_margin"
            android:contentDescription="@string/profile_fragment_about_login"
            android:src="@drawable/ic_key"
            app:tint="?attr/toolBarColor" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/profile_fragment_card_view_text_margin"
            android:layout_marginBottom="@dimen/profile_fragment_card_view_text_margin"
            android:fontFamily="@font/readex_regular"
            android:text="@string/profile_fragment_entry"
            android:textColor="@color/text_view_black"
            android:textSize="@dimen/profile_fragment_card_view_text_size" />
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/cvProfileRegistration"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:foreground="?android:attr/selectableItemBackground"
        app:cardBackgroundColor="?attr/cardViewBackground"
        app:cardCornerRadius="@dimen/profile_fragment_card_view_radius"
        app:cardElevation="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/cvProfileLogin"
        app:layout_constraintStart_toStartOf="@+id/cvProfileLogin"
        app:layout_constraintTop_toBottomOf="@id/cvProfileLogin">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center|start"
            android:layout_marginStart="@dimen/profile_fragment_card_view_icon_margin"
            android:layout_marginTop="@dimen/profile_fragment_card_view_icon_margin"
            android:layout_marginBottom="@dimen/profile_fragment_card_view_icon_margin"
            android:contentDescription="@string/profile_fragment_about_registation"
            android:src="@drawable/ic_registration"
            app:tint="?attr/toolBarColor" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/profile_fragment_card_view_text_margin"
            android:layout_marginBottom="@dimen/profile_fragment_card_view_text_margin"
            android:text="@string/profile_fragment_registration"
            android:fontFamily="@font/readex_regular"
            android:textColor="@color/text_view_black"
            android:textSize="@dimen/profile_fragment_card_view_text_size" />
    </androidx.cardview.widget.CardView>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/tilProfilePassword"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/authentication_fragment_edit_text_margin"
        android:visibility="gone"
        app:boxCornerRadiusBottomEnd="@dimen/authentication_fragment_text_input_layout_radius"
        app:boxCornerRadiusBottomStart="@dimen/authentication_fragment_text_input_layout_radius"
        app:boxCornerRadiusTopEnd="@dimen/authentication_fragment_text_input_layout_radius"
        app:boxCornerRadiusTopStart="@dimen/authentication_fragment_text_input_layout_radius"
        app:boxStrokeColor="?attr/textDedicated"
        app:endIconDrawable="@drawable/ic_eye"
        app:endIconMode="password_toggle"
        app:endIconTint="?attr/toolBarColor"
        app:hintEnabled="false"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/cvProfileImage"
        app:layout_constraintStart_toStartOf="@+id/tvProfileName"
        app:layout_constraintTop_toTopOf="parent"
        app:startIconDrawable="@drawable/ic_lock"
        app:startIconTint="?attr/textTransparent">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/etProfilePassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:hint="@string/authentication_fragment_hint_password"
            android:inputType="textPassword"
            android:paddingStart="@dimen/authentication_fragment_edit_text_padding"
            android:paddingEnd="@dimen/authentication_fragment_edit_text_padding"
            android:singleLine="true"
            android:textColorHint="?attr/textTransparent"
            android:textSize="@dimen/authentication_fragment_edit_text_size" />
    </com.google.android.material.textfield.TextInputLayout>

</androidx.constraintlayout.motion.widget.MotionLayout>
