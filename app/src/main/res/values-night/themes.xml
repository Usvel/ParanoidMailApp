<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Paranoid" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimaryDark">@color/primaryDark</item>
        <item name="colorPrimary">@color/primaryLight</item>
        <item name="colorOnPrimary">@color/primaryDark</item>
        <!-- Window Style -->
        <item name="android:windowNoTitle">true</item>
        <!-- Secondary brand color. -->
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/status_bar_color</item>
        <item name="android:navigationBarColor">@color/nav_bar_color</item>
        <!-- Customize your theme here. -->
        <item name="android:windowLightStatusBar" tools:targetApi="23">false</item>
        <item name="android:windowLightNavigationBar" tools:targetApi="27">false</item>
        <item name="toolBarColor">@color/white</item>
        <item name="backgroundVioletLight">@color/minor_color_light_dark_theme</item>
        <item name="backgroundViolet">@color/minor_color_dark_theme</item>
        <!-- Nav bar -->
        <item name="navBarIconIndicator">@color/nav_indicator_dark</item>
        <item name="navBarIconColor">@color/light_nav_icon_selected</item>
        <item name="navBarIconColorNotChecked">@color/light_nav_icon_not_selected</item>
        <item name="toolBarColorSecond">@color/second_background_transparent</item>
        <!-- Text -->
        <item name="textTransparent">@color/light_text_transparent</item>
        <item name="textDedicated">@color/white</item>
        <!-- VPN Button -->
        <item name="vpnButtonDisabled">@color/vpn_color_disabled_dark</item>
        <item name="vpnButtonConnected">@color/vpn_color_connected</item>
        <item name="vpnButtonError">@color/vpn_color_error</item>
        <item name="vpnButtonWarning">@color/vpn_color_warning</item>
        <!-- CardViewButton -->
        <item name="cardViewBackground">@color/card_view_background_dark</item>
        <!-- ProfileFragment -->
        <item name="textButtonProfile">@color/text_button_profile_dark</item>
        <item name="cardViewText">@color/text_card_view_dark</item>
        <!-- AuthenticationFragment -->
        <item name="boxStrokeColor">@color/white</item>
        <!-- Item color -->
        <item name="iconBackground">@color/icon_background_dark</item>
        <!-- Item color -->
        <item name="iconBackgroundRed">@color/icon_background_red_dark</item>
    </style>


    <style name="Widget.Material3.BottomNavigationView.ActiveIndicator.Paranoid" parent="Widget.Material3.BottomNavigationView.ActiveIndicator">
        <item name="android:width">@dimen/m3_bottom_nav_item_active_indicator_width</item>
        <item name="android:height">@dimen/m3_bottom_nav_item_active_indicator_height</item>
        <item name="marginHorizontal">@dimen/m3_bottom_nav_item_active_indicator_margin_horizontal
        </item>
        <item name="shapeAppearance">
            @style/ShapeAppearance.Material3.NavigationBarView.ActiveIndicator
        </item>
        <item name="android:color">?attr/navBarIconIndicator</item>
    </style>

    <!-- Alert Dialog -->
    <style name="ThemeOverlay.MaterialComponents.MaterialAlertDialog_Background"
        parent="@style/ThemeOverlay.MaterialComponents.MaterialAlertDialog">
        <!-- Background Color-->
        <item name="android:background">@color/minor_color_dark_theme</item>
        <!-- Style for negative button -->
        <item name="buttonBarNegativeButtonStyle">@style/NegativeButtonStyle</item>
    </style>

    <style name="NegativeButtonStyle" parent="@style/Widget.MaterialComponents.Button.TextButton">
        <!-- text color for the button -->
        <item name="android:textColor">@color/light_nav_icon_selected</item>
    </style>

</resources>