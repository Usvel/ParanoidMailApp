<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:animateLayoutChanges="true"
    android:fitsSystemWindows="true">

    <androidx.fragment.app.FragmentContainerView
        android:id="@+id/my_nav_host_fragment"
        android:name="androidx.navigation.fragment.NavHostFragment"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:defaultNavHost="true"
        app:layout_constraintBottom_toTopOf="@+id/bAppBottom"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:navGraph="@navigation/navigation_graph" />

    <androidx.constraintlayout.widget.Barrier
        android:id="@+id/bAppBottom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:barrierDirection="top"
        app:constraint_referenced_ids="flAppProceed,bottom_tab_bar" />

    <FrameLayout
        android:id="@+id/flAppProceed"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/backgroundViolet"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <androidx.cardview.widget.CardView
            android:id="@+id/cvAppProceed"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/app_activity_card_view_proceed_margin_vertical"
            android:layout_marginBottom="@dimen/app_activity_card_view_proceed_margin_vertical"
            android:backgroundTint="?attr/navBarIconIndicator"
            android:clickable="true"
            android:foreground="?android:attr/selectableItemBackground"
            android:innerRadius="0dp"
            android:shape="ring"
            app:cardCornerRadius="@dimen/app_activity_card_view_proceed_radius"
            app:cardElevation="0dp">

            <TextView
                android:id="@+id/tvAppProceed"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingStart="@dimen/app_activity_card_view_text_proceed_margin_horizontal"
                android:paddingTop="@dimen/app_activity_card_view_text_proceed_margin_vertical"
                android:paddingEnd="@dimen/app_activity_card_view_text_proceed_margin_horizontal"
                android:paddingBottom="@dimen/app_activity_card_view_text_proceed_margin_vertical"
                android:text="@string/app_activity_bottom_nav_proceed" />
        </androidx.cardview.widget.CardView>
    </FrameLayout>

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottom_tab_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="?attr/backgroundViolet"
        android:orientation="horizontal"
        app:itemActiveIndicatorStyle="@style/Widget.Material3.BottomNavigationView.ActiveIndicator.Paranoid"
        app:itemIconTint="@drawable/bottom_navigation_selector"
        app:itemRippleColor="?attr/navBarIconIndicator"
        app:labelVisibilityMode="labeled"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:menu="@menu/bottom_nav_menu" />
</androidx.constraintlayout.widget.ConstraintLayout>